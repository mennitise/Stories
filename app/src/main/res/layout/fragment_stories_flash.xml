<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".StoriesFlashActivity$PlaceholderFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/md_keylines"
        android:layout_marginTop="@dimen/md_keylines"
        android:layout_marginBottom="75dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_flash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/stories_no_image"/>
            <TextView
                android:id="@+id/name_flash"
                android:text="Author of the Flash Story"
                android:layout_marginTop="@dimen/md_keylines"
                android:textAlignment="textEnd"
                android:layout_marginHorizontal="@dimen/md_keylines"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/title_flash"
                android:text="Description of the Flash Story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginHorizontal="@dimen/md_keylines"
                android:layout_alignBottom="@id/image_flash"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>

