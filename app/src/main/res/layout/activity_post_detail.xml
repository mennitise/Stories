<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PostDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/card_post_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="@dimen/md_keylines"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:layout_marginRight="@dimen/md_keylines"
                    android:background="@color/colorPrimary"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/post_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:contentDescription="postImage"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/stories_no_image" />
                        <VideoView
                            android:id="@+id/post_video"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/info_profile_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/title_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:text="Title"
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
                        <TextView
                            android:id="@+id/description_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/white"
                            android:text="Description"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/like_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/like"
                                android:layout_weight="1"
                                style="?android:attr/borderlessButtonStyle"/>
                            <ImageButton
                                android:id="@+id/like_face_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/like_face"
                                android:layout_weight="1"
                                style="?android:attr/borderlessButtonStyle"/>
                            <ImageButton
                                android:id="@+id/not_like_face_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/not_like_face"
                                android:layout_weight="1"
                                style="?android:attr/borderlessButtonStyle"/>
                            <ImageButton
                                android:id="@+id/dislike_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/not_like"
                                android:layout_weight="1"
                                style="?android:attr/borderlessButtonStyle"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/likes_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="1"
                        android:text="Likes"
                        style="?android:attr/borderlessButtonStyle"
                        />
                    <Button
                        android:id="@+id/author_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="1"
                        android:text="Author"
                        style="?android:attr/borderlessButtonStyle"
                        />

                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/comments_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment here..."
                android:layout_weight="1"
                android:inputType="text"
                android:imeOptions="actionSend"/>
            <ImageButton
                android:id="@+id/comment_send"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_menu_send"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>